{
  "builders": [
    {
      "communicator": "ssh",
      "source_path": "bento/ubuntu-18.04",
      "box_version": "201906.18.0",
      "add_force": false,
      "skip_add": true,
      "provider": "virtualbox",
      "output_dir" : "build",
      "type": "vagrant",
      "template": "vagrantBuild",
      "teardown_method": "destroy",
      "output_vagrantfile": "../vagrantFileTemplate"
    }
  ],
  "provisioners":[
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
      "inline": [
          "export DEBIAN_FRONTEND=noninteractive",
          "apt-add-repository ppa:ansible/ansible",
          "/usr/bin/apt-get update",
          "/usr/bin/apt-get -y install ansible python-apt"
      ]
    },
    {
      "type": "file",
      "source": "./localActions",
      "destination": "/tmp"
    },
    {
      "type": "file",
      "source": "./examples",
      "destination": "/tmp"
    },
    {
      "type": "file",
      "source": "./scripts",
      "destination": "/tmp"
    },
    {
      "type": "ansible-local",
      "playbook_file": "provision.yml"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
      "scripts": [
          "cleanup.sh"
      ]
    }
  ]
}

